{
  "name": "sistema-pagamentos-backend",
  "version": "1.0.0",
  "description": "Backend do Sistema de Pagamentos",
  "main": "dist/app.js",
  "scripts": {
    "prestart": "npm run build",
    "start": "node dist/app.js",
    "dev": "nodemon src/app.ts",
    "build": "tsc",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
    ,"mock:card": "node mock-card-validation.js"
  },
  "keywords": ["payments", "api", "typescript", "mongodb"],
  "author": "Eduardo",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "nodemailer": "^6.9.7",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1",
    "qrcode": "^1.5.3",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.8.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/nodemailer": "^6.4.14",
    "@types/cors": "^2.8.17",
    "@types/uuid": "^9.0.7",
    "@types/qrcode": "^1.5.5",
    "typescript": "^5.2.2",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.6",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "mongodb-memory-server": "^10.1.4",
    "@types/axios": "^0.14.0"
  },
  "optionalDependencies": {},
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 120000,
    "moduleFileExtensions": ["ts", "js", "json"],
    "testMatch": ["**/tests/**/*.spec.ts"],
    "setupFilesAfterEnv": ["<rootDir>/tests/setup/test-db.ts"],
    "verbose": false
  }
}